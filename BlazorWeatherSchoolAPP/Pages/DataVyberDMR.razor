                <RadzenColumn>

                    <RadzenDatePicker Min="MinMaxDate.Min" Max="MinMaxDate.Max" @bind-Value=@Start DateFormat="dd/MM/yyyy">
                        <FooterTemplate>
                            <RadzenButton Click=@(args => Start = DateTime.Now) Text="Dnes" class="my-3 w-100" />
                        </FooterTemplate>
                    </RadzenDatePicker>

                </RadzenColumn>
                <RadzenColumn>
                    @if (last_data != null)
                    {
